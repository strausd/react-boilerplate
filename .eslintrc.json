{
    "extends": [
        "eslint:recommended",
        "prettier/react",
        "plugin:react/recommended",
        "plugin:jest/recommended",
        "plugin:prettier/recommended"
    ],
    "env": {
        "es6": true,
        "node": true,
        "browser": true,
        "jest": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "camelcase": "error",
        "no-case-declarations": 0,
        "no-console": "warn",
        "no-inline-comments": "error",
        "no-var": "error",
        "prefer-arrow-callback": "error",
        "prefer-const": "error",
        "prettier/prettier": "error",
        "max-len": [
            "error",
            {
                "code": 140,
                "ignoreComments": true,
                "ignoreUrls": true,
                "ignoreRegExpLiterals": true
            }
        ]
    }
}